# Kyvern Shield API Configuration

# Application
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (Legacy - direct PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/kyvern_shield

# Supabase (Required for API Key Management)
# Get these from your Supabase project: Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key  # Found in Settings > API > service_role
SUPABASE_ANON_KEY=your-anon-key  # Found in Settings > API > anon

# Redis
REDIS_URL=redis://localhost:6379/0

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Security
JWT_SECRET=change-me-in-production-use-strong-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Analysis
ANOMALY_DETECTION_THRESHOLD=0.85

# Ollama LLM (for local Llama 3)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=30.0

# Shield Analysis
MAX_TRANSACTION_AMOUNT_SOL=10.0
DAILY_TRANSACTION_LIMIT_SOL=100.0
AUTO_BLOCK_RISK_THRESHOLD=80
AUTO_ALLOW_RISK_THRESHOLD=20
